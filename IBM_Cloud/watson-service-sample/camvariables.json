{
  "terraform_version": "~> 0.11.0",
  "template_input_params": [
    {
      "name": "servicename",
      "description": "Specify the service name you want to create",
      "type": "string",
      "required": true,
      "secured": false,
      "label": "Service Name",
      "hidden": false,
      "immutable": false,
      "default": "watson_vision_combined"
    },
    {
      "name": "plan",
      "description": "Specify the corresponding plan for the service you selected",
      "type": "string",
      "required": true,
      "secured": false,
      "label": "Plan",
      "hidden": false,
      "immutable": false,
      "default": "lite"
    },
    {
      "name": "org",
      "description": "Your Bluemix ORG",
      "type": "string",
      "required": true,
      "secured": false,
      "label": "Organization",
      "hidden": false,
      "immutable": false
    },
    {
      "name": "space",
      "description": "Your Bluemix Space",
      "type": "string",
      "required": true,
      "secured": false,
      "label": "Space",
      "hidden": false,
      "immutable": false,
      "default": "dev"
    },
    {
      "name": "region",
      "description": "Bluemix region",
      "default": "us-south",
      "type": "string",
      "required": true,
      "secured": false,
      "label": "Region",
      "hidden": false,
      "immutable": false
    }


  ],
  "template_output_params": [
    {
      "name": "service_credentials",
      "label": "Service Credentials",
      "secured": false,
      "hidden": false,
      "type": "string"
    },
    {
      "name": "ibm_cloud_dashboard",
      "label": "IBM Cloud Dashboard",
      "description": "IBM  Cloud Dashboard URL",
      "secured": false,
      "hidden": false,
      "type":"url"
    }
  ]
}
